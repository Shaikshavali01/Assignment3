<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UploadImageActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

        android:id="@+id/toolbar_upload_img"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <TextView
            android:id="@+id/tv_gallery_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/opensanssemibold"
            android:padding="5dp"
            android:text="@string/gallery"
            android:textColor="@color/clr_black"
            android:textSize="20dp"
            android:layout_gravity="center"

            />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/view_upload_img"

        app:layout_constraintTop_toBottomOf="@id/toolbar_upload_img"
        app:layout_constraintStart_toStartOf="parent"

        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="255dp"

        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        android:id="@+id/img_upload_card"
        android:src="@drawable/img_cloud"
        android:background="@drawable/card_img_bg"
        android:scaleType="centerInside"

        app:layout_constraintTop_toBottomOf="@id/view_upload_img"
        app:layout_constraintStart_toStartOf="parent"

     />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="310dp"
        android:layout_height="wrap_content"

        android:id="@+id/btn_upload_img_upload_act"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_bg_blue_color"
        android:text="@string/upload_image"
        android:textColor="@color/clr_white"
        android:textSize="@dimen/text_size_16dp"
        android:fontFamily="@font/opensanssemibold"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_upload_card"


        />




</androidx.constraintlayout.widget.ConstraintLayout>